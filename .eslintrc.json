{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "semi": "off",
      "indent": "warn",
      "spaced-comment": "warn",
      "object-curly-spacing": "warn",
      "no-trailing-spaces": "warn",
      "react/jsx-filename-extension": "off",
      "arrow-parens": "off",
      "keyword-spacing": "off",
      "react/jsx-indent": "warn",
      "react/jsx-first-prop-new-line": "off",
      "react/prop-types": "off",
      "quotes": "off",
      "react/jsx-vlosing-tag-location": "warning",
      "no-shadow": "off",
      "object-curly-newline" : "off",
      "lines-between-class-members" : "off"
    },
    "parser": "babel-eslint"
}
